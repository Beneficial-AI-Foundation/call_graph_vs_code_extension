{
  "name": "call-graph-visualizer",
  "displayName": "Call Graph Visualizer",
  "description": "Generate and display function call graphs for Rust code using pre-built rust-analyzer-test binaries and pre-generated SCIP indices",
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "call-graph-visualizer.displayCallGraph",
        "title": "Display Call Graph"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "call-graph-visualizer.displayCallGraph",
          "when": "resourceExtname == .rs",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Call Graph Visualizer",
      "properties": {
        "callGraphVisualizer.depth": {
          "type": "number",
          "default": 5,
          "description": "Maximum depth for call graph analysis",
          "minimum": 1,
          "maximum": 10
        },
        "callGraphVisualizer.filterSources": {
          "type": "string",
          "default": "none",
          "enum": [
            "none",
            "filter-non-libsignal-sources"
          ],
          "description": "Source filtering mode for graph generation"
        },
        "callGraphVisualizer.includeCallers": {
          "type": "boolean",
          "default": false,
          "description": "Include callers in the graph (shows functions that call the target)"
        },
        "callGraphVisualizer.includeCallees": {
          "type": "boolean",
          "default": true,
          "description": "Include callees in the graph (shows functions called by the target)"
        },
        "callGraphVisualizer.outputFormat": {
          "type": "string",
          "default": "svg",
          "enum": [
            "svg",
            "png",
            "dot"
          ],
          "description": "Output format for generated graphs"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.7",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
